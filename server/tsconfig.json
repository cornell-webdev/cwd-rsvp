{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "esnext"
        ],
        "outDir": "build",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules"
    ]
}
